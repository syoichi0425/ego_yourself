<!DOCTYPE html>
  <html>
    <head>
      <title>日記</title>
      <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    </head>
    <body>
    <h2>日記の編集</h2>
      <%=form_with model: @diary,local: true do |f|%>
      <%= f.label :title1 %>
      <%=f.text_field :diary_content_0%>
      </br>
      <%= f.label :title2 %>
      <%=f.text_field :diary_content_1%>
      </br>
      <%= f.label :title3 %>
      <%=f.text_field :diary_content_2%>
      </br>
      <%= f.label :日付 %>
      <%=f.date_field :created_at,value: @diary_day %>
      </br>
      <div class="btn-margin-auto">
      <%=f.submit "投稿する" ,class: "btn btn-success"%>
      <% end %>
        <%=form_with model: @diary, method: :delete,local: true do |f|%>
        <p><%=f.submit "削除する",class: "btn btn-danger"%></p>
      <%end%>
      </div>
  </html>