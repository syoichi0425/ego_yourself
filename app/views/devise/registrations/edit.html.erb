<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<%= f.file_field :avatar %>

  <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_field :name%>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "現在のパスワード" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %><br />
  </div>

  <div class="field">
    <%= f.label "新しいパスワード" %> <i></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上、半角英数</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "パスワードを更新する" ,class: "btn btn-info"%>
  </div>
<% end %>

<div class="logout">
  <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "【確認】アカウントを削除してもよろしいですか？" }, method: :delete , class: 'btn btn-danger'%>
  </div>

<%= link_to "戻る", :back %>
